// Soup of the Day
// ======================================

@import 'bourbon';

// Functions
// ======================================

@function dynamic-contrast-color($color: $body__background-color) {
  @if (lightness($color) > 85) {
    @return $black;
  } @else {
    @return $white;
  }
}

@function gray-scale($key) {
  @if map-has-key($gray-scale, $key) {
    @return map-get($gray-scale, $key);
  }

  @warn "Unknown `#{$key}` in $gray-scale.";
  @return null;
}

@function section-height-preset($key) {
  @if map-has-key($section-height, $key) {
    @return map-get($section-height, $key);
  }

  @warn "Unknown `#{$key}` in $section-height.";
  @return null;
}

@function z-index($key) {
  @if map-has-key($z-index, $key) {
    @return map-get($z-index, $key);
  }

  @warn "Unknown `#{$key}` in $z-index.";
  @return null;
}

// Grid
// ======================================
$grid-columns: 12 !default;
$gutter-width: 2rem !default;

// Breakpoints
// ======================================

$screen-xs: 20rem !default;
$screen-sm: 30rem !default;
$screen-md: 48rem !default;
$screen-lg: 62rem !default;
$screen-xl: 75rem !default;
$screen-xxl: 90rem !default;

$screen-legacy-max: ($screen-xs - 0.0625rem) !default;
$screen-xs-max: ($screen-sm - 0.0625rem) !default;
$screen-sm-max: ($screen-md - 0.0625rem) !default;
$screen-md-max: ($screen-lg - 0.0625rem) !default;
$screen-lg-max: ($screen-xl - 0.0625rem) !default;

// Modular Scale
// ======================================
$modular-scale-base: 1rem !default;
$modular-scale-base-md: .875rem !default;
$modular-scale-base-sm: .5rem !default;
$modular-scale-ratio: 1.25 !default;

// Colors
// ======================================

// Alert
$alert--info: #FFED8F !default;
$alert--error: #E75725 !default;
$alert--success: #54C670 !default;

// Core
$black: #000000 !default;
$white: #ffffff !default;
$gray-0: #f7f7f7 !default;
$gray-1: #e5e5e5 !default;
$gray-2: #eceeef !default;
$gray-3: #ced4da !default;
$gray-4: #adb5bd !default;
$gray-5: #999999 !default;
$gray-6: #636c72 !default;
$gray-7: #505050 !default;
$gray-8: #495057 !default;
$gray-9: #343a40 !default;
$gray-10: #292b2c !default;

$gray-scale: (
  0: $gray-0,
  1: $gray-1,
  2: $gray-2,
  3: $gray-3,
  4: $gray-4,
  5: $gray-5,
  6: $gray-6,
  7: $gray-7,
  8: $gray-8,
  9: $gray-9,
  10: $gray-10
);

// Shadows
$shadow-button: 0 4px 8px 0 rgba(0, 0, 0, 0.15) !default;
$shadow-card: 0 8px 22px rgba(0, 0, 0, 0.15) !default;
$shadow-interface: 1px 1px 0 rgba(0, 0, 0, 0.05) !default;
$shadow-menu: 0 2px 8px 0 rgba(0, 0, 0, 0.05) !default;
$shadow-1: 0 2px 4px 0 rgba(0, 0, 0, 0.05) !default;
$shadow-2: 0 2px 8px 0 rgba(0, 0, 0, 0.1) !default;
$shadow-3: 0 2px 16px 0 rgba(0, 0, 0, 0.1) !default;

// Vendors
$linked-in: #4875B4 !default;

// Global
// ======================================

// Root
$root__font-size: {{ theme.settings.root_font_size }} !default;

// Body
$body__background-color: {{ theme.settings.background_color }} !default;
$body__text-color: {{ theme.settings.text_color }} !default;
$body__font-family: '{{ theme.settings.body_font }}', Sans-Serif !default;
$body__font-size: modular-scale(0) !default;
$body__font-weight: 400 !default;
$body__line-height: 2 !default;

// Headings
$heading__font-family: '{{ theme.settings.heading_font }}', Sans-Serif !default;
$heading__font-weight: 600 !default;
$heading__line-height: 1.2 !default;

$subheading__font-family: '{{ theme.settings.subheading_font }}', Sans-Serif !default;
$subheading__font-weight: 400 !default;

// Interface
$interface__background-color: {{ theme.settings.interface_background_color }} !default;
$interface__background-color--active: {{ theme.settings.interface_hover_background_color }} !default;
$interface__border-color: {{ theme.settings.interface_border_color }} !default;
$interface__border: 1px solid $interface__border-color !default;
$interface__shadow: $shadow-interface !default;

// Icon
$icon__font-family: '{{ icon_font }}', 'FontAwesome' !default

// Section Presets
// ======================================

$banner-background-color: {{ theme.settings.banner_background_color }} !default;
$banner-heading-color: {{ theme.settings.banner_heading_text_color }} !default;
$banner-subheading-color: {{ theme.settings.banner_subheading_text_color }} !default;
$banner-text-color: {{ theme.settings.banner_text_color }} !default;

$primary-background-color: {{ theme.settings.primary_background_color }} !default;
$primary-heading-color: {{ theme.settings.primary_heading_text_color }} !default;
$primary-subheading-color: {{ theme.settings.primary_subheading_text_color }} !default;
$primary-text-color: {{ theme.settings.primary_text_color }} !default;

$secondary-background-color: {{ theme.settings.secondary_background_color }} !default;
$secondary-heading-color: {{ theme.settings.secondary_heading_text_color }} !default;
$secondary-subheading-color: {{ theme.settings.secondary_subheading_text_color }} !default;
$secondary-text-color: {{ theme.settings.secondary_text_color }} !default;

$tertiary-background-color: {{ theme.settings.tertiary_background_color }} !default;
$tertiary-heading-color: {{ theme.settings.tertiary_heading_text_color }} !default;
$tertiary-subheading-color: {{ theme.settings.tertiary_subheading_text_color }} !default;
$tertiary-text-color: {{ theme.settings.tertiary_text_color }} !default;

// Decoration
// ======================================

$base__border-radius: 0 !default;
$base__border-color: gray-scale(0) !default;
$base__border-width: 1px !default;
$base__border-style: solid !default;

$cursor-disabled: not-allowed !default;

// Forms & Inputs
// ======================================

$form__control-padding: 10px 15px !default;
$form__input-color: $body__text-color !default;
$form__input-background-color: $interface__background-color !default;
$form__input-color-placeholder: tint($form__input-color, 50%) !default;
$form__input-disabled: shade($interface__background-color, 3%) !default;
$form__input-height: calc($body__font-size * $body__line-height) + ($gutter-width) !default;

// Review Stars
// ======================================

$review-star__empty: gray-scale(2);
$review-star__filled-color: {{ theme.settings.review_star }} !default;
$review-star__background-color: {{ theme.settings.review_star_background }} !default;
$review-star__empty-star: url("data:image/svg+xml;base64,") !default;

// Branding
// ======================================

$brand__color: {{ theme.settings.brand_color }} !default;
$accent__color: {{ theme.settings.accent_color }} !default;

// Anchors
$link__color: {{ theme.settings.link_color }} !default;
$link__color--active: {{ theme.settings.link_hover_color }} !default;

// Navigation
$nav__background-color: {{ theme.settings.menu_background_color }} !default;
$nav__link-color: {{ theme.settings.menu_link_color }} !default;
$nav__background-color--active: {{ theme.settings.menu_background_hover_color }} !default;
$nav__link-color--active: {{ theme.settings.menu_link_hover_color }} !default;
$nav__fixed-background-color: {{ theme.settings.menu_fixed_background_color }} !default;
$nav__fixed-link-color: {{ theme.settings.menu_fixed_link_color }} !default;
$nav__fixed-link-color--active: {{ theme.settings.menu_fixed_link_hover_color }} !default;
$nav__floating-link-color: {{ theme.settings.menu_floating_link_color }} !default;
$nav__floating-link-color--active: {{ theme.settings.menu_floating_link_hover_color }} !default;
$nav__mobile-background-color: {{ theme.settings.menu_mobile_background_color }} !default;
$nav__mobile-link-color: {{ theme.settings.menu_mobile_link_color }} !default;
$nav__mobile-background-color--active: {{ theme.settings.menu_mobile_background_hover_color }} !default;
$nav__mobile-link-color--active: {{ theme.settings.menu_mobile_link_hover_color }} !default;

// Mobile Menu
$mobile-menu__width: 20px;
$mobile-menu__height: 24px;
$mobile-menu__thickness: 3px;
$mobile-menu__space: 4px;
$mobile-menu__transition: 250ms;

// Dropdown
$dropdown__background-color: {{ theme.settings.dropdown_background_color }} !default;
$dropdown__link-color: {{ theme.settings.dropdown_link_color }} !default;
$dropdown__link-background-color: {{ theme.settings.dropdown_link_background_color }} !default;
$dropdown__link-color--active: {{ theme.settings.dropdown_link_hover_color }} !default;
$dropdown__link-background-color--active: {{ theme.settings.dropdown_link_background_hover_color }} !default;

// Footer
$footer__background-color: {{ theme.settings.footer_background_color }} !default;
$footer__text-color: {{ theme.settings.footer_text_color }} !default;
$footer__link-color: {{ theme.settings.footer_link_color }} !default;
$footer__link-color--active: {{ theme.settings.footer_link_hover_color }} !default;

// Buttons
$button__padding: 10px 15px !default;
$button__padding--large: 15px 30px !default;
$button__border-width: 2px !default;
$button__border-style: solid !default;
$button__border-radius: 0 !default;
$button__font-family: $body__font-family;
$button__font-size: $body__font-size !default;
$button__font-weight: 600 !default;

$button__primary-background: {{ theme.settings.primary_button_background_color }} !default;
$button__primary-color: {{ theme.settings.primary_button_text_color }} !default;
$button__primary-background--active: {{ theme.settings.primary_button_background_hover_color }} !default;
$button__primary-color--active: {{ theme.settings.primary_button_text_hover_color }} !default;

$button__secondary-background: {{ theme.settings.secondary_button_background_color }} !default;
$button__secondary-color: {{ theme.settings.secondary_button_text_color }} !default;
$button__secondary-background--active: {{ theme.settings.secondary_button_background_hover_color }} !default;
$button__secondary-color--active: {{ theme.settings.secondary_button_text_hover_color }} !default;

// Progress Bar (Circle)
$progress__circle-size: 60px !default;
$progress__meter-size: 6px !default;
$progress__circle-background: $white !default;
$progress__circle-color: $accent__color !default;
$progress__inset-size: $progress__circle-size - $progress__meter-size !default;
$progress__inset-color: $white !default;
$progress__transition: transform 800ms ease !default;

// Section Padding
$section-height__large: 5.625rem !default;
$section-height__medium: 3.750rem !default;
$section-height__small: 1.875rem !default;

$section-height: (
  small: $section-height__small,
  medium: $section-height__medium,
  large: $section-height__large
);

// Z-Index
$z-index__default: 0 !default;
$z-index__element--background: 101 !default;
$z-index__element--middleground: 102 !default;
$z-index__element--foreground: 103 !default;
$z-index__overlay: 200 !default;
$z-index__navigation--background: 301 !default;
$z-index__navigation--middleground: 302 !default;
$z-index__navigation--foreground: 303 !default;
$z-index__modal: 400 !default;
$z-index__saiyan: 9999 !default;
$z-index__yamcha: -9999 !default;

$z-index: (
  default: $z-index__default,
  element--background: $z-index__element--background,
  element--middleground: $z-index__element--middleground,
  element--foreground: $z-index__element--foreground,
  overlay: $z-index__overlay,
  navigation--background: $z-index__navigation--background,
  navigation--middleground: $z-index__navigation--middleground,
  navigation--foreground: $z-index__navigation--foreground,
  modal: $z-index__modal,
  page-foreground: $z-index__saiyan,
  page-background: $z-index__yamcha
);
