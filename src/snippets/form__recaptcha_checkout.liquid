<fieldset>
  <input type="submit" value="{{ fields.submit.label }}"
    class="g-recaptcha"
    data-sitekey="{{ site.invisible_recaptcha_key }}"
    data-callback='{{ submitName }}' />

  <script>
    function {{ submitName }}(token) {
      document.querySelector('.checkout__form--{{ formSelector }} form').submit();
    }
  </script>
</fieldset>

