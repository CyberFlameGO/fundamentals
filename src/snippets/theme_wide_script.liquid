{% comment %}
  Theme-wide Javascript that will be run on page load of all pages of the theme.

  Any javascript in the page should be placed inside a script tag, or
  you can place it within the script tag defined below.

  It is included near the bottom of the page.
{% endcomment %}

<script type="text/javascript" src="{{ 'script.min.js' | theme_asset_url }}"></script>
<script>
$(window).load(function() {
  var fonts = ['{{ theme.settings.heading_font }}:400,600,700', '{{ theme.settings.subheading_font }}:400,600,700', '{{ theme.settings.body_font }}:300,400,400i,600,700,800'],
      fontLoad = fonts.filter(function(elem, index, self) {
        return index == self.indexOf(elem);
      });
  // Web Font Loader
  // https://github.com/typekit/webfontloader
  WebFont.load({
    google: {
      families: fontLoad
    },
    custom: {
      families: ['{{ theme.settings.icon_font }}'],
      urls: ['https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css']
    }
  });
});
</script>
