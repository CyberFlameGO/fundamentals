<section class="banner-legacy {% if section.settings.background_image != blank or theme.settings.banner_background_promo_image != blank %}full-width-background{% endif %} {% if section.settings.background_color_preset != 'none' and section.settings.background_color_preset != blank %}{{ section.settings.background_color_preset | prepend: 'section-color-preset__' }}{% endif %} {% if section.settings.section_height_preset != 'none' and section.settings.section_height_preset != blank %}{{ section.settings.section_height_preset | prepend: 'section-height__' }}{% endif %}" data-preview-item="banner">
  <div class="banner__container">
    <article class="section__content">
      {% if section.settings.title != blank %}
        <header class="section__headings">
          <h1 class="section__heading">{{ section.settings.title }}</h1>
          {% if section.settings.subtitle != blank %}
            <h2 class="section__subheading">{{ section.settings.subtitle }}</h2>
          {% endif %}
        </header>
      {% endif %}
      {% if section.settings.video.frame != blank %}
        <section class="section__video">
          {{ section.settings.video.frame }}
        </section>
      {% endif %}
      {% if section.blocks != empty %}
        <section class="section__button-group">
          {% for block in section.blocks %}
            {% if block.type == 'banner_button' %}
              <a class="button button-primary" href="{{ block.settings.button_url }}">{{ block.settings.button_text }}</a>
            {% endif %}
          {% endfor %}
        </section>
      {% else %}
        {% include 'product_action_buttons' %}
      {% endif %}
      {% if section.settings.video.popover != blank %}
        <section class="section__video--mobile">
          {{ section.settings.video.popover }}
        </section>
      {% endif %}
    </article>
    {% if section.settings.show_read_more %}
      {% if section.settings.read_more != blank %}
        {% assign read_more = section.settings.read_more %}
      {% else %}
        {% assign read_more = 'Read More' %}
      {% endif %}
      <a href="#read-more" class="banner__read-more">
        <i class="fa fa-chevron-down" aria-hidden="true"></i>{{ read_more }}
      </a>
    {% endif %}
  </div>
</section>

<script>
$(document).ready(function() {
  // This returns an array of all sibling sections and applies the ID "read-more"
  // dynamically to the first instance.
  $('.banner').nextAll('section').eq(0).attr('id','read-more');
});
</script>

{% style %}

section.banner {

  .section__heading,
  .section__subheading {
    text-align: {{ section.settings.heading_alignment }};
  }

  {% if section.settings.heading_alignment == "center" %}
    .section__subheading:before {
      margin-right: auto;
      margin-left: auto;
    }
  {% endif %}

  {% if section.settings.background_image != blank %}
    $background-image: '{{ section.settings.background_image }}';
  {% elsif theme.settings.banner_background_promo_image != blank %}
    $background-image: '{{ theme.settings.banner_background_promo_image }}';
  {% else %}
    $background-image: null;
  {% endif %}

  $background-overlay-color: {{ section.settings.overlay_color }};
  $background-overlay-opacity: {{ section.settings.overlay_opacity }} * 0.01;

  @if $background-overlay-opacity {
    $color: rgba($background-overlay-color, $background-overlay-opacity);
    $overlay: linear-gradient(
      $color,
      $color
    );
  } @else {
    $overlay: null;
  }
  $img: if($background-image, url('#{$background-image}'), null);

  @if $img {
    $background: ($overlay, $img);
  } @else {
    $background: (rgba($background-overlay-color, $background-overlay-opacity));
  }

  &.full-width-background {
    @include background-image($background...);
  }

  .banner__read-more {
    &,
    .fa {
      color: {{ section.settings.read_more_color }};
    }

    .fa {
      border-color: {{ section.settings.read_more_color }};
    }
  }
}

{% endstyle %}

