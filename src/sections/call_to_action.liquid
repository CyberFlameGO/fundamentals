<section class="call-to-action" data-preview-item="call-to-action">
  {% if section.settings.button_show and section.settings.button_link != null %}
    <a href="{{ section.settings.button_link }}">
  {% endif %}
  <article>
    {% if section.settings.button_show != true and section.settings.button_text != empty %}
      <section>
        <a href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>
      </section>
    {% endif %}
  </article>
{% if section.settings.button_show and section.settings.button_link != null %}
  </a>
{% endif %}
</section>

{% schema %}
{
  "label":"Call to action",
  "settings":[
    {
      "label":"Text",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"Call to action"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":"This is where you seal the deal. Sprinkle this section throughout your page to push prospects to purchase!"
        },
        {
          "type":"color",
          "id":"text_color",
          "label":"Text color override",
          "default":"#ffffff"
        }
      ]
    },
    {
      "label":"Button",
      "settings":[

        {
          "type":"text",
          "id":"button_text",
          "label":"Text",
          "default":"Get started now"
        },
        {
          "type":"page_picker",
          "id":"button_link",
          "label":"Link"
        },
        {
          "type":"radio",
          "id":"button_type",
          "label":"Type",
          "description":"",
          "default":"primary",
          "options":[
            {
              "value":"primary",
              "label":"Primary"
            },
            {
              "value":"secondary",
              "label":"Secondary"
            }
          ]
        },
        {
          "type":"checkbox",
          "id":"button_show",
          "label":"Hide button & make entire section clickable",
          "default":false
        }
      ]
    },
    {
      "label":"Background image",
      "settings":[
        {
          "type":"image",
          "id":"background_image",
          "default":"https://cdn.thinkific.com/13/20180205/7e57f4d425ca1d31db8380c97d3f6771.png",
          "description":"<small>Recommended: <strong>1440px x 720px (1MB)</strong></small>",
          "label":"Image"
        },
        {
          "type":"image_origin",
          "id":"background_image_origin",
          "default": "center center",
          "label":"Image focal point"
        },
        {
          "type":"color",
          "id":"overlay_color",
          "label":"Overlay color",
          "default":"#000000"
        },
        {
          "type":"number",
          "id":"overlay_opacity",
          "label":"Overlay opacity",
          "default":30,
          "min":0,
          "max":100
        }
      ]
    },
    {
      "label":"Size & alignment",
      "settings":[
        {
          "type":"select",
          "id":"section_height_preset",
          "label":"Height",
          "description":"",
          "default":"medium",
          "options":[
            {
              "value":"small",
              "label":"Small"
            },
            {
              "value":"medium",
              "label":"Medium"
            },
            {
              "value":"large",
              "label":"Large"
            },
            {
              "value":"xlarge",
              "label":"Extra large"
            }
          ]
        },
        {
          "type":"radio",
          "id":"content_alignment",
          "label":"Alignment",
          "default":"center",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        }
      ]
    }
  ]
}
{% endschema %}
