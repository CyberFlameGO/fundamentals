<section class="call-to-action
{% include 'section_utility_background_image' %}
{% include 'section_utility_height_preset' %}" data-preview-item="call-to-action">
{% if section.settings.button_show and section.settings.button_url != null %}
  <a href="{{ section.settings.button_url }}" class="call-to-action__section-link">
{% endif %}
  <div class="call-to-action__container">
    <article class="section__content">
      {% include 'section_headings' %}
      {% if section.settings.body != blank %}
        <section class="section__body">{{ section.settings.body }}</section>
      {% endif %}
      {% if section.settings.button_show != true and section.settings.button_text != empty and section.settings.button_url != null %}
        <ul class="section__button-group">
          <li><a class="button button-primary" href="{{ section.settings.button_url }}">{{ section.settings.button_text }}</a></li>
        </ul>
      {% endif %}
    </article>
  </div>
{% if section.settings.button_show and section.settings.button_url != null %}
  </a>
{% endif %}
</section>

{% style %}

section.call-to-action {
  {% include 'section_style_background_image' %}
  {% include 'section_style_content_alignment' %}
  {% include 'section_style_heading_ornament' %}
}

{% endstyle %}

{% schema %}
{
  "label":"Call to action",
  "settings":[
    {
      "label":"Text",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"Call to action"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":"Get started now"
        },
        {
          "type":"textarea",
          "id":"body",
          "label":"Description",
          "default":""
        },
        {
          "type":"color",
          "id":"text_color",
          "label":"Text color",
          "default":"#{$heading__color}"
        }
      ]
    },
    {
      "label":"Settings",
      "settings":[

        {
          "type":"text",
          "id":"button_text",
          "label":"Text",
          "default":"Buy Now"
        },
        {
          "type":"page_picker",
          "id":"button_url",
          "label":"Link"
        },
        {
          "type":"checkbox",
          "id":"button_show",
          "label":"Make entire section clickable",
          "default":false
        }
      ]
    },
    {
      "label":"Background",
      "settings":[
        {
          "type":"image",
          "id":"background_image",
          "default":"",
          "label":"Image"
        },
        {
          "type":"color",
          "id":"overlay_color",
          "label":"Overlay color",
          "default":"#D9DEE2"
        },
        {
          "type":"number",
          "id":"overlay_opacity",
          "label":"Overlay opacity",
          "default":0,
          "min":0,
          "max":100
        }
      ]
    },
    {
      "label":"Size & Alignment",
      "settings":[
        {
          "type":"select",
          "id":"section_height_preset",
          "label":"Height",
          "description":"",
          "default":"large",
          "options":[
            {
              "value":"small",
              "label":"Small"
            },
            {
              "value":"medium",
              "label":"Medium"
            },
            {
              "value":"large",
              "label":"Large"
            }
          ]
        },
        {
          "type":"radio",
          "id":"content_alignment",
          "label":"Alignment",
          "default":"center",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        },
        {
          "type":"radio",
          "id":"heading_order",
          "label":"Heading Order",
          "default":"normal",
          "options":[
            {
              "value":"normal",
              "label":"Normal"
            },
            {
              "value":"reverse",
              "label":"Reverse"
            }
          ]
        }
      ]
    }
  ]
}
{% endschema %}
