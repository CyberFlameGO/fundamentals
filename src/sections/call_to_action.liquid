<section class="call-to-action
{% include 'full_width_background' %}
{% include 'section_color_preset' %}
{% include 'section_height_preset' %}" data-preview-item="call-to-action">
{% if section.settings.button_show and section.settings.button_url != null %}
  <a href="{{ section.settings.button_url }}" class="call-to-action__section-link">
{% endif %}
  <div class="call-to-action__container">
    <article class="section__content">
      {% include 'section_headings' %}
      {% if section.settings.body != blank %}
        <section class="section__body">{{ section.settings.body }}</section>
      {% endif %}
      {% if section.settings.button_show != true and section.settings.button_text != empty and section.settings.button_url != null %}
        <ul class="section__button-group">
          <li><a class="button button-primary" href="{{ section.settings.button_url }}">{{ section.settings.button_text }}</a></li>
        </ul>
      {% endif %}
    </article>
  </div>
{% if section.settings.button_show and section.settings.button_url != null %}
  </a>
{% endif %}
</section>

{% style %}

section.call-to-action {

  {% include 'section_heading_order' %}
  {% include 'section_heading_ornament' %}

  .section__content {
    text-align: {{ section.settings.content_alignment }};
  }

  {% if section.settings.content_alignment == "center" %}
    .section__subheading:before {
      margin-right: auto;
      margin-left: auto;
    }

    .section__button-group {
      @include justify-content(center);
    }
  {% endif %}

  {% if section.settings.content_alignment == "right" %}
    .section__subheading:before {
      margin-left: auto;
    }

    .section__button-group {
      @include justify-content(flex-end);
    }
  {% endif %}

  {% if section.settings.background_image != blank %}
    $background-image: '{{ section.settings.background_image }}';
  {% else %}
    $background-image: null;
  {% endif %}

  $background-overlay-color: {{ section.settings.overlay_color }};
  $background-overlay-opacity: {{ section.settings.overlay_opacity }} * 0.01;

  @if $background-overlay-opacity {
    $color: rgba($background-overlay-color, $background-overlay-opacity);
    $overlay: linear-gradient(
      $color,
      $color
    );
  } @else {
    $overlay: null;
  }
  $img: if($background-image, url('#{$background-image}'), null);

  @if $img {
    $background: ($overlay, $img);
  } @else {
    $background: (rgba($background-overlay-color, $background-overlay-opacity));
  }

  &.full-width-background {
    @include background-image($background...);
  }
}

{% endstyle %}

{% schema %}
{
  "label":"Call to action",
  "settings":[
    {
      "label":"Heading",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"Ready to elevate your career?"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":"Get started now!"
        },
        {
          "type":"radio",
          "id":"heading_order",
          "label":"Order",
          "default":"default",
          "options":[
            {
              "value":"default",
              "label":"Default"
            },
            {
              "value":"flipped",
              "label":"Flipped"
            }
          ]
        },
        {
          "type":"checkbox",
          "id":"show_heading_ornament",
          "label":"Show ornament",
          "default":true
        }
      ]
    },
    {
      "label":"Settings",
      "settings":[
        {
          "type":"textarea",
          "id":"body",
          "label":"Text",
          "default":""
        },
        {
          "type":"radio",
          "id":"content_alignment",
          "label":"Content alignment",
          "default":"center",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        },
        {
          "type":"text",
          "id":"button_text",
          "label":"Button text",
          "default":"Buy Now"
        },
        {
          "type":"page_picker",
          "id":"button_url",
          "label":"Button / Call to action URL"
        },
        {
          "type":"checkbox",
          "id":"button_show",
          "label":"Hide button and make entire section clickable",
          "default":false
        }
      ]
    },
    {
      "label":"Background",
      "settings":[
        {
          "type":"select",
          "id":"background_color_preset",
          "label":"Choose color set",
          "description":"Color sets can be configured in the Design area.",
          "default":"banner",
          "options":[
            {
              "value":"banner",
              "label":"Banner"
            },
            {
              "value":"primary",
              "label":"Primary"
            },
            {
              "value":"secondary",
              "label":"Secondary"
            },
            {
              "value":"tertiary",
              "label":"Tertiary"
            }
          ]
        },
        {
          "type":"image",
          "id":"background_image",
          "default":"",
          "label":"Image"
        },
        {
          "type":"color",
          "id":"overlay_color",
          "label":"Overlay Color",
          "default":"#D9DEE2"
        },
        {
          "type":"number",
          "id":"overlay_opacity",
          "label":"Overlay Opacity",
          "default":0,
          "min":0,
          "max":100
        }
      ]
    },
    {
      "label":"Section Height",
      "settings":[
        {
          "type":"select",
          "id":"section_height_preset",
          "label":"Height Preset",
          "description":"",
          "default":"large",
          "options":[
            {
              "value":"small",
              "label":"Small"
            },
            {
              "value":"medium",
              "label":"Medium"
            },
            {
              "value":"large",
              "label":"Large"
            }
          ]
        }
      ]
    }
  ]
}
{% endschema %}
