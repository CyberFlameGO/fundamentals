<section class="richtext
{% include 'section_color_preset' %}
{% include 'section_height_preset' %}" data-preview-item="richtext">
  <div class="richtext__container">
    <div class="richtext__wrapper">
      {% if section.settings.heading != blank or section.settings.subheading != blank %}
        <header class="section__headings">
          {% if section.settings.heading != blank %}
            <h3 class="section__heading">{{ section.settings.heading }}</h3>
          {% endif %}
          {% if section.settings.subheading != blank %}
            <h4 class="section__subheading">{{ section.settings.subheading }}</h4>
          {% endif %}
        </header>
      {% endif %}
      <article class="section__content">
        <section class="section__body">
          {{ section.settings.body }}
        </section>
      </article>
    </div>
  </div>
</section>

{% style %}

section.richtext {

  .section__heading,
  .section__subheading {
    text-align: {{ section.settings.heading_alignment }};
  }
}

{% endstyle %}

