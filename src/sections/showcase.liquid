<section class="showcase section-height__medium" data-preview-item="showcase">
  <div class="showcase__container">
    {% include 'section_headings' %}
    <article class="section__content">
      {% if section.blocks != empty %}
        <ul class="showcase__list section__body">
          {% for block in section.blocks %}
            <li class="showcase__list-item">
              <img src="{{ block.settings.showcase_image }}" alt="{{ block.settings.showcase_name }}" title="{{ block.settings.showcase_name }}" class="img-responsive" />
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </article>
  </div>
</section>

<script>
$(window).load(function() {
  var isMobile = window.matchMedia("only screen and (max-width: 767px)"),
      $showcaseCarousel = $('.showcase__list').addClass('owl-carousel'),
      showcaseOwlOptions = {
        center: true,
        dots: false,
        loop: true,
        margin: 0,
        nav: false,
        slideBy: 1,
        responsive: {
          0: {
            items: 1.5
          },
          500: {
            items: 3
          }
        }
      };
  if (isMobile.matches) {
    var showcaseOwlActive = $showcaseCarousel.owlCarousel(showcaseOwlOptions);
  } else {
    $showcaseCarousel.addClass('off');
  }
  $(window).resize(function() {
    if (isMobile.matches) {
      if ( $showcaseCarousel.hasClass('off') ) {
        var showcaseOwlActive = $showcaseCarousel.owlCarousel(showcaseOwlOptions);
        $showcaseCarousel.removeClass('off');
      }
    } else {
      if ( !$showcaseCarousel.hasClass('off') ) {
        $showcaseCarousel.addClass('off').trigger('destroy.owl.carousel');
        $showcaseCarousel.find('.owl-stage-outer').children(':eq(0)').unwrap();
      }
    }
  });
});
</script>

