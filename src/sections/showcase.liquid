<section class="showcase
{% if section.settings.background_color_preset != blank %}
 {{ section.settings.background_color_preset | prepend: 'section-color-preset__' }}
{% endif %}
{% if section.settings.section_height_preset != blank %}
 {{ section.settings.section_height_preset | prepend: 'section-height__' }}
{% endif %}" data-preview-item="showcase">
  <div class="showcase__container">
    {% if section.settings.heading != blank %}
      <header class="section__headings">
        <h3 class="section__heading">{{ section.settings.heading }}</h3>
        {% if section.settings.subheading != blank %}
          <h4 class="section__subheading">{{ section.settings.subheading }}</h4>
        {% endif %}
      </header>
    {% endif %}
    <article class="section__content">
      {% if section.blocks != empty %}
        <ul class="showcase__list">
          {% for block in section.blocks %}
            <li class="showcase__list-item">
              <img src="{{ block.settings.showcase_image }}" alt="{{ block.settings.showcase_name }}" title="{{ block.settings.showcase_name }}" class="img-responsive" />
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </article>
  </div>
</section>

{% style %}

section.showcase {

  .section__heading,
  .section__subheading {
    text-align: {{ section.settings.heading_alignment }};
  }

  {% if section.settings.heading_alignment == "center" %}
    .section__subheading:before {
      margin-right: auto;
      margin-left: auto;
    }
  {% endif %}
}

{% endstyle %}

{% schema %}
{
  "label":"Showcase",
  "settings":[
    {
      "label":"Headings",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"As seen in"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":""
        },
        {
          "type":"radio",
          "id":"heading_alignment",
          "label":"Alignment",
          "description":"Headings will inherit the same alignment",
          "default":"center",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        }
      ]
    },
    {
      "label":"Background",
      "settings":[
        {
          "type":"select",
          "id":"background_color_preset",
          "label":"Choose color set",
          "description":"Color sets can be configured in the Design area.",
          "default":"secondary",
          "options":[
            {
              "value":"primary",
              "label":"Primary"
            },
            {
              "value":"secondary",
              "label":"Secondary"
            },
            {
              "value":"tertiary",
              "label":"Tertiary"
            }
          ]
        }
      ]
    },
    {
      "label":"Section height",
      "settings":[
        {
          "type":"select",
          "id":"section_height_preset",
          "label":"Height preset",
          "description":"",
          "default":"medium",
          "options":[
            {
              "value":"small",
              "label":"Small"
            },
            {
              "value":"medium",
              "label":"Medium"
            },
            {
              "value":"large",
              "label":"Large"
            }
          ]
        }
      ]
    }
  ],
  "blocks":{
    "label":"Add showcase item",
    "limit":9,
    "types":[
      {
        "type":"showcase_item",
        "label":"Showcase item",
        "settings":[
          {
            "type":"text",
            "id":"showcase_name",
            "label":"Name"
          },
          {
            "type":"image",
            "id":"showcase_image",
            "label":"image"
          }
        ]
      }
    ],
    "defaults":[
      {
        "type":"showcase_item",
        "values":{
          "showcase_name":"Amazon",
          "showcase_image":"https://placekitten.com/300/150"
        }
      },
      {
        "type":"showcase_item",
        "values":{
          "showcase_name":"Airbnb",
          "showcase_image":"https://placekitten.com/300/150"
        }
      },
      {
        "type":"showcase_item",
        "values":{
          "showcase_name":"IBM",
          "showcase_image":"https://placekitten.com/300/150"
        }
      },
      {
        "type":"showcase_item",
        "values":{
          "showcase_name":"HBO",
          "showcase_image":"https://placekitten.com/300/150"
        }
      },
      {
        "type":"showcase_item",
        "values":{
          "showcase_name":"Fox",
          "showcase_image":"https://placekitten.com/300/150"
        }
      }
    ]
  }
}
{% endschema %}
