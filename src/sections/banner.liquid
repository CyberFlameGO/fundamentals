<section class="banner
{% include 'section_utility_background_image' %}
{% include 'section_utility_color_preset' %}
{% include 'section_utility_height_preset' %}" data-preview-item="banner">
  <div class="banner__container">
    <div class="banner__wrapper">
      <article class="section__content">
        {% if section.settings.heading != blank or section.settings.subheading != blank %}
          <header class="section__headings">
            {% if section.settings.heading != blank %}
              <h1 class="section__heading
              {% include 'section_utility_heading_ornament' %}">{{ section.settings.heading }}</h1>
            {% endif %}
            {% if section.settings.subheading != blank %}
              <h2 class="section__subheading">{{ section.settings.subheading }}</h2>
            {% endif %}
          </header>
        {% endif %}
        {% if section.blocks != empty %}
          <section class="section__button-group">
            {% for block in section.blocks %}
              {% if block.type == 'banner_button' %}
                <a class="button button-primary" href="{{ block.settings.button_link }}">{{ block.settings.button_text }}</a>
              {% endif %}
            {% endfor %}
            {% if page.product_is_course %}
              {% assign course = page.course %}
              {% if course.has_free_trial %}
                <a href="{{ course.links.enroll_free_trial }}" class="button{% unless course.user_can_purchase %} button-primary{% else %} button-secondary{% endunless %}">{{ 'liquid.partials.course_landing_page_action_buttons.link_free_trial' | translate }}</a>
              {% endif %}
            {% endif %}
          </section>
        {% else %}
          {% include 'product_action_buttons' %}
        {% endif %}
      </article>
    </div>
  </div>
</section>

{% style %}

section.banner {
  {% include 'section_style_background_image' %}
  {% include 'section_style_content_alignment' %}
  {% include 'section_style_heading_order' %}
  {% include 'section_style_heading_ornament' %}
}

{% endstyle %}

{% schema %}
{
  "label":"Banner",
  "settings":[
    {
      "label":"Headings",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"Your first course"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":"Get more detailed about your course here!"
        },
        {
          "type":"color",
          "id":"text_color",
          "label":"Text color",
          "default":"#{$heading__color}"
        }
      ]
    },
    {
      "label":"Hero Image",
      "settings":[
        {
          "type":"image",
          "id":"background_image",
          "default":"",
          "label":"Image",
          "description": "<small>Recommended: <strong>1440px x 720px (1MB)</strong></small>"
        },
        {
          "type":"color",
          "id":"overlay_color",
          "label":"Overlay color",
          "default":"#D9DEE2"
        },
        {
          "type":"number",
          "id":"overlay_opacity",
          "label":"Overlay opacity",
          "default":0,
          "min":0,
          "max":100
        }
      ]
    },
    {
      "label":"Size & Alignment",
      "settings":[
        {
          "type":"select",
          "id":"section_height_preset",
          "label":"Height",
          "description":"",
          "default":"banner",
          "options":[
            {
              "value":"small",
              "label":"Small"
            },
            {
              "value":"medium",
              "label":"Medium"
            },
            {
              "value":"large",
              "label":"Large"
            },
            {
              "value":"banner",
              "label":"Banner"
            }
          ]
        },
        {
          "type":"radio",
          "id":"content_alignment",
          "label":"Alignment",
          "default":"left",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        }
      ]
    }
  ],
  "blocks":{
    "label":"Add Button",
    "limit":2,
    "types":[
      {
        "type":"banner_button",
        "label":"Button",
        "settings":[
          {
            "type":"text",
            "id":"button_text",
            "label":"Text"
          },
          {
            "type":"page_picker",
            "id":"button_link",
            "label":"Link"
          }
        ]
      }
    ],
    "defaults":[]
  }
}
{% endschema %}
