<section class="banner
{% include 'section_utility_background_image' %}
{% include 'section_utility_height_preset' %}" data-preview-item="banner">
  <div class="banner__container">
    <div class="banner__wrapper">
      <article class="section__content">
        {% if section.settings.heading != blank or section.settings.subheading != blank %}
          <header class="section__headings {% include 'section_utility_heading_order' %}">
            {% if section.settings.heading != blank %}
              <h1 class="section__heading
              {% include 'section_utility_heading_ornament' %}">{{ section.settings.heading }}</h1>
            {% endif %}
            {% if section.settings.subheading != blank %}
              <h2 class="section__subheading">{{ section.settings.subheading }}</h2>
            {% endif %}
          </header>
        {% endif %}
        {% if section.blocks != empty %}
          <section class="section__button-group">
            {% for block in section.blocks %}
              {% if block.type == 'banner_button' %}
                <a class="button button-primary" href="{{ block.settings.button_link }}">{{ block.settings.button_text }}</a>
              {% endif %}
            {% endfor %}
            {% if page.product_is_course %}
              {% assign course = page.course %}
              {% if course.has_free_trial %}
                <a href="{{ course.links.enroll_free_trial }}" class="button{% unless course.user_can_purchase %} button-primary{% else %} button-secondary{% endunless %}">{{ 'liquid.partials.course_landing_page_action_buttons.link_free_trial' | translate }}</a>
              {% endif %}
            {% endif %}
          </section>
        {% else %}
          {% include 'product_action_buttons' %}
        {% endif %}
      </article>
      {% if section.settings.social_icon != null and section.settings.social_link != blank or
            section.settings.social_icon_2 != null and section.settings.social_link_2 != blank or
            section.settings.social_icon_3 != null and section.settings.social_link_3 != blank %}
        <section class="section__social-nav">
          <ul class="social-nav__list">
            {% if section.settings.social_icon != null and section.settings.social_link != blank %}
              <li class="social-nav__list-item"><a href="{{ section.settings.social_link }}" target="_blank"><i class="fa {{ section.settings.social_icon }}"></i></a></li>
            {% endif %}
            {% if section.settings.social_icon_2 != null and section.settings.social_link_2 != blank %}
              <li class="social-nav__list-item"><a href="{{ section.settings.social_link_2 }}" target="_blank"><i class="fa {{ section.settings.social_icon_2 }}"></i></a></li>
            {% endif %}
            {% if section.settings.social_icon_3 != null and section.settings.social_link_3 != blank %}
              <li class="social-nav__list-item"><a href="{{ section.settings.social_link_3 }}" target="_blank"><i class="fa {{ section.settings.social_icon_3 }}"></i></a></li>
            {% endif %}
          </ul>
        </section>
      {% endif %}
    </div>
  </div>
</section>

{% style %}

section.banner {
  {% include 'section_style_background_image' %}
  {% include 'section_style_content_alignment' %}
  {% include 'section_style_heading_ornament' %}
}

{% endstyle %}

{% schema %}
{
  "label":"Banner",
  "settings":[
    {
      "label":"Headings",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"Banner"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":"Your banner contains a hero image with text overlay. You can also add call to action buttons."
        },
        {
          "type":"color",
          "id":"text_color",
          "label":"Text color",
          "default":"#{$heading__color}"
        }
      ]
    },
    {
      "label":"Hero Image",
      "settings":[
        {
          "type":"image",
          "id":"background_image",
          "default":"https://cdn.thinkific.com/13/20180118/36f8ac8164b76893395884088321023a.png",
          "label":"Image",
          "description":"<small>Recommended: <strong>1440px x 720px (1MB)</strong></small>"
        },
        {
          "type":"color",
          "id":"overlay_color",
          "label":"Overlay color",
          "default":"#D9DEE2"
        },
        {
          "type":"number",
          "id":"overlay_opacity",
          "label":"Overlay opacity",
          "default":0,
          "min":0,
          "max":100
        }
      ]
    },
    {
      "label":"Social links",
      "settings":[
        {
          "type":"icon",
          "id":"social_icon",
          "label":"Social icon one",
          "default":""
        },
        {
          "type":"text",
          "id":"social_link",
          "description":"<small>Leave these blank if you do not need social links.</small>",
          "label":"Link"
        },
        {
          "type":"icon",
          "id":"social_icon_2",
          "label":"Social icon two",
          "default":""
        },
        {
          "type":"text",
          "id":"social_link_2",
          "description":"<small>Leave these blank if you do not need social links.</small>",
          "label":"Link"
        },
        {
          "type":"icon",
          "id":"social_icon_3",
          "label":"Social icon three",
          "default":""
        },
        {
          "type":"text",
          "id":"social_link_3",
          "description":"<small>Leave these blank if you do not need social links.</small>",
          "label":"Link"
        }
      ]
    },
    {
      "label":"Size & Alignment",
      "settings":[
        {
          "type":"select",
          "id":"section_height_preset",
          "label":"Height",
          "description":"",
          "default":"banner",
          "options":[
            {
              "value":"small",
              "label":"Small"
            },
            {
              "value":"medium",
              "label":"Medium"
            },
            {
              "value":"large",
              "label":"Large"
            },
            {
              "value":"banner",
              "label":"Banner"
            }
          ]
        },
        {
          "type":"radio",
          "id":"content_alignment",
          "label":"Alignment",
          "default":"left",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        },
        {
          "type":"radio",
          "id":"heading_order",
          "label":"Heading Order",
          "default":"normal",
          "options":[
            {
              "value":"normal",
              "label":"Normal"
            },
            {
              "value":"reverse",
              "label":"Reverse"
            }
          ]
        }
      ]
    }
  ],
  "blocks":{
    "label":"Add Button",
    "limit":2,
    "types":[
      {
        "type":"banner_button",
        "label":"Button",
        "settings":[
          {
            "type":"text",
            "id":"button_text",
            "label":"Text"
          },
          {
            "type":"page_picker",
            "id":"button_link",
            "label":"Link"
          }
        ]
      }
    ],
    "defaults":[
      {
        "type":"banner_button",
        "values":{
          "button_text":"Call to action",
          "button_link":""
        }
      }
    ]
  }
}
{% endschema %}
