<section class="banner
{% include 'full_width_background' %}
{% include 'section_color_preset' %}
{% include 'section_height_preset' %}" data-preview-item="banner">
  <div class="banner__container">
    <div class="banner__wrapper">
      <article class="section__content">
        {% if section.settings.heading != blank or section.settings.subheading != blank %}
          <header class="section__headings">
            {% if section.settings.heading != blank %}
              <h1 class="section__heading">{{ section.settings.heading }}</h1>
            {% endif %}
            {% if section.settings.subheading != blank %}
              <h2 class="section__subheading">{{ section.settings.subheading }}</h2>
            {% endif %}
          </header>
        {% endif %}
        {% if section.blocks != empty %}
          <section class="section__button-group">
            {% for block in section.blocks %}
              {% if block.type == 'banner_button' %}
                <a class="button button-primary" href="{{ block.settings.button_url }}">{{ block.settings.button_text }}</a>
              {% endif %}
            {% endfor %}
            {% if page.product_is_course %}
              {% assign course = page.course %}
              {% if course.has_free_trial %}
                <a href="{{ course.links.enroll_free_trial }}" class="button{% unless course.user_can_purchase %} button-primary{% else %} button-secondary{% endunless %}">{{ 'liquid.partials.course_landing_page_action_buttons.link_free_trial' | translate }}</a>
              {% endif %}
            {% endif %}
          </section>
        {% else %}
          {% include 'product_action_buttons' %}
        {% endif %}
      </article>
    </div>
  </div>
</section>

{% style %}

section.banner {

  {% include 'section_heading_order' %}

  .section__content {
    text-align: {{ section.settings.content_alignment }};
  }

  {% if section.settings.content_alignment == "center" %}
    .section__button-group {
      @include justify-content(center);
    }
    .section__subheading:before {
      margin-right: auto;
      margin-left: auto;
    }
  {% endif %}

  {% if section.settings.content_alignment == "right" %}
    .section__button-group {
      @include justify-content(flex-end);
    }
  {% endif %}

  {% if section.settings.background_image != blank %}
    $background-image: '{{ section.settings.background_image }}';
  {% else %}
    $background-image: null;
  {% endif %}

  $background-overlay-color: {{ section.settings.overlay_color }};
  $background-overlay-opacity: {{ section.settings.overlay_opacity }} * 0.01;

  @if $background-overlay-opacity {
    $color: rgba($background-overlay-color, $background-overlay-opacity);
    $overlay: linear-gradient(
      $color,
      $color
    );
  } @else {
    $overlay: null;
  }
  $img: if($background-image, url('#{$background-image}'), null);

  @if $img {
    $background: ($overlay, $img);
  } @else {
    $background: (rgba($background-overlay-color, $background-overlay-opacity));
  }

  &.full-width-background {
    @include background-image($background...);
  }
}

{% endstyle %}

{% schema %}
{
  "label":"Banner",
  "settings":[
    {
      "label":"Headings",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"Your first course"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":"Get more detailed about your course here!"
        },
        {
          "type":"radio",
          "id":"heading_order",
          "label":"Order",
          "default":"default",
          "options":[
            {
              "value":"default",
              "label":"Default"
            },
            {
              "value":"flipped",
              "label":"Flipped"
            }
          ]
        },
        {
          "type":"checkbox",
          "id":"show_heading_ornament",
          "label":"Show ornament",
          "default":false
        }
      ]
    },
    {
      "label":"Background",
      "settings":[
        {
          "type":"select",
          "id":"background_color_preset",
          "label":"Choose color set",
          "description":"Color sets can be configured in the Design area.",
          "default":"banner",
          "options":[
            {
              "value":"banner",
              "label":"Banner"
            },
            {
              "value":"primary",
              "label":"Primary"
            },
            {
              "value":"secondary",
              "label":"Secondary"
            },
            {
              "value":"tertiary",
              "label":"Tertiary"
            }
          ]
        },
        {
          "type":"image",
          "id":"background_image",
          "default":"",
          "label":"Image",
          "description": "<small>Recommended: <strong>1440px x 720px (1MB)</strong></small><br /><small>GIF is also supported for looped background images.</small>"
        },
        {
          "type":"color",
          "id":"overlay_color",
          "label":"Overlay color",
          "default":"#D9DEE2"
        },
        {
          "type":"number",
          "id":"overlay_opacity",
          "label":"Overlay opacity",
          "default":0,
          "min":0,
          "max":100
        }
      ]
    },
    {
      "label":"Content alignment",
      "settings":[
        {
          "type":"radio",
          "id":"content_alignment",
          "label":"",
          "default":"left",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        }
      ]
    },
    {
      "label":"Section height",
      "settings":[
        {
          "type":"select",
          "id":"section_height_preset",
          "label":"Height preset",
          "description":"",
          "default":"banner",
          "options":[
            {
              "value":"small",
              "label":"Small"
            },
            {
              "value":"medium",
              "label":"Medium"
            },
            {
              "value":"large",
              "label":"Large"
            },
            {
              "value":"banner",
              "label":"Banner"
            }
          ]
        }
      ]
    }
  ],
  "blocks":{
    "label":"Buttons",
    "limit":2,
    "types":[
      {
        "type":"banner_button",
        "label":"Button",
        "settings":[
          {
            "type":"text",
            "id":"button_text",
            "label":"Text"
          },
          {
            "type":"page_picker",
            "id":"button_url",
            "label":"URL"
          }
        ]
      }
    ],
    "defaults":[]
  }
}
{% endschema %}
