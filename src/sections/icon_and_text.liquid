<section class="text-icon section-height__medium" data-preview-item="text-icon">
  <div class="text-icon__container">
    {% include 'section_headings' %}
    <article class="section__content">
      {% if section.blocks != empty %}
        <ul class="text-icon__list section__body">
          {% for block in section.blocks %}
            <li class="text-icon__list-item">
              <i class="fa {{ block.settings.ti_icon }}"></i>
              <h4>{{ block.settings.ti_name }}</h4>
              <p>{{ block.settings.ti_body }}</p>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </article>
  </div>
</section>

{% style %}

section.text-icon {
  {% include 'section_style_heading_alignment' %}
  {% include 'section_style_heading_order' %}
  {% include 'section_style_heading_ornament' %}
}

{% endstyle %}

