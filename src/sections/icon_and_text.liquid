<section class="text-icon section-height__medium" data-preview-item="text-icon">
  <div class="text-icon__container">
    {% include 'section_headings' %}
    <article class="section__content">
      {% if section.blocks != empty %}
        <ul class="text-icon__list section__body">
          {% for block in section.blocks %}
            <li class="text-icon__list-item">
              <i class="fa {{ block.settings.ti_icon }}"></i>
              <h4>{{ block.settings.ti_name }}</h4>
              <p>{{ block.settings.ti_body }}</p>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </article>
  </div>
</section>

{% style %}

section.text-icon {
  {% include 'section_style_heading_alignment' %}
  {% include 'section_style_heading_ornament' %}
}

{% endstyle %}

{% schema %}
{
  "label":"Icon & text",
  "settings":[
    {
      "label":"Headings",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":""
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":""
        },
        {
          "type":"radio",
          "id":"heading_alignment",
          "label":"Alignment",
          "description":"",
          "default":"left",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        },
        {
          "type":"radio",
          "id":"heading_order",
          "label":"Heading Order",
          "default":"normal",
          "options":[
            {
              "value":"normal",
              "label":"Normal"
            },
            {
              "value":"reverse",
              "label":"Reverse"
            }
          ]
        }
      ]
    }
  ],
  "blocks":{
    "label":"Add icon & text",
    "limit":3,
    "types":[
      {
        "type":"icon_text",
        "label":"Icon & text",
        "settings":[
          {
            "type":"icon",
            "id":"ti_icon",
            "label":"Icon"
          },
          {
            "type":"text",
            "id":"ti_name",
            "label":"Name"
          },
          {
            "type":"textarea",
            "id":"ti_body",
            "label":"Description"
          }
        ]
      }
    ],
    "defaults":[
      {
        "type":"icon_text",
        "values":{
          "ti_icon":"fa-asterisk",
          "ti_name":"Icon & text",
          "ti_body":"Use an icon and text to communicate the value proposition and share the specific benefits of your offering. What makes it unique in your market?"
        }
      },
      {
        "type":"icon_text",
        "values":{
          "ti_icon":"fa-area-chart",
          "ti_name":"Icon & text",
          "ti_body":"Use an icon and text to communicate the value proposition and share the specific benefits of your offering. What makes it unique in your market?"
        }
      },
      {
        "type":"icon_text",
        "values":{
          "ti_icon":"fa-lightbulb-o",
          "ti_name":"Icon & text",
          "ti_body":"Use an icon and text to communicate the value proposition and share the specific benefits of your offering. What makes it unique in your market?"
        }
      }
    ]
  }
}
{% endschema %}
