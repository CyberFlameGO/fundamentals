<section class="course-categories section-height__medium" data-preview-item="course-categories">
  <div class="course-categories__container">
    {% include 'section_headings' %}
    <article class="section__content">
      {% include 'products_category_list' %}
    </article>
  </div>
</section>

{% style %}

section.course-categories {
  {% include 'section_style_heading_alignment' %}
  {% include 'section_style_heading_ornament' %}
}

{% endstyle %}

{% schema %}
{
  "label":"Categories [smart section]",
  "settings":[
    {
      "type":"checkbox",
      "id":"course_categories_description",
      "label":"",
      "description":"<small>This smart section includes all of your categories. <a href='/manage/collections/' target='_blank'>Edit categories Â»</a></small>"
    },
    {
      "label":"Headings",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"Categories"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":""
        },
        {
          "type":"radio",
          "id":"heading_alignment",
          "label":"Alignment",
          "description":"",
          "default":"center",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        },
        {
          "type":"radio",
          "id":"heading_order",
          "label":"Heading Order",
          "default":"normal",
          "options":[
            {
              "value":"normal",
              "label":"Normal"
            },
            {
              "value":"reverse",
              "label":"Reverse"
            }
          ]
        }
      ]
    }
  ]
}
{% endschema %}
