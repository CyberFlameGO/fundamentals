<header class="header" data-preview-item="header">
  {% if section.settings.site_url != null %}
    {% assign site_url = section.settings.site_url %}
  {% else %}
    {% assign site_url = site.home_url %}
  {% endif %}
  {% include 'header__logo' %}
  {% include 'header__navigation' %}
</header>

{% schema %}
{
  "label":"Header",
  "settings":[
    {
      "label":"Logo",
      "settings":[
        {
          "type":"image",
          "id":"site_logo",
          "default":"",
          "label":"Image",
          "description": ""
        },
        {
          "type":"number",
          "min":1,
          "max":24,
          "id":"site_logo_size",
          "default":10,
          "label":"Image size",
          "description":"<small>This will scale the size of your logo and header.</small>"
        },
        {
          "type":"page_picker",
          "id":"site_url",
          "label":"Link",
          "description":"",
          "default":""
        }
      ]
    },
    {
      "label":"Style & alignment",
      "settings":[
        {
          "type":"select",
          "id":"header_style",
          "label":"Background",
          "description":"",
          "default":"solid",
          "options":[
            {
              "value":"floating",
              "label":"Transparent"
            },
            {
              "value":"solid",
              "label":"Solid"
            }
          ]
        },
        {
          "type":"checkbox",
          "id":"menu_fixed",
          "label":"Sticky navigation",
          "description":"<small>Top level menu remains visible while scrolling</small>",
          "default":true
        },
        {
          "type":"checkbox",
          "id":"show_dashboard_link",
          "label":"Show 'My Dashboard' link",
          "description":"<small>My Dashboard link will appear in the top level navigation for students that are signed in.</small>",
          "default":true
        },
        {
          "type":"checkbox",
          "id":"show_menu_label",
          "label":"Show 'Menu' label",
          "description":"<small>For mobile navigation. Recommended for accessibility.</small>",
          "default":true
        },
        {
          "type":"radio",
          "id":"menu_position",
          "label":"Alignment",
          "default":"right",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        }
      ]
    },
    {
      "label":"Button (product pages only)",
      "settings":[
        {
          "type":"checkbox",
          "id":"hide_default_buttons",
          "label":"Hide the button that appears on product pages",
          "default":false
        },
        {
          "type":"text",
          "id":"button_text",
          "label":"Text",
          "default":"Get started now"
        }
      ]
    }
  ],
  "blocks":{
    "label":"Add link",
    "limit":6,
    "types":[
      {
        "type":"nav_item",
        "label":"Link",
        "settings":[
          {
            "type":"text",
            "id":"nav_text",
            "label":"Text"
          },
          {
            "type":"page_picker",
            "id":"nav_link",
            "label":"Link"
          },
          {
            "type": "select",
            "id": "nav_target",
            "label": "Open link in",
            "default": "_self",
            "options": [
              {
                "value": "_self",
                "label": "Same window"
              },
              {
                "value": "_blank",
                "label": "New window"
              }
            ]
          }
        ]
      }
    ],
    "defaults":[
      {
        "type":"nav_item",
        "values":{
          "nav_text":"All Courses",
          "nav_link":{
            "type":"url",
            "id":"/collections"
          },
          "nav_target":"_self"
        }
      }
    ]
  }
}
{% endschema %}
