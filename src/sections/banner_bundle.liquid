{% assign bundle = page.bundle %}

<section class="banner-bundle
{% include 'section_utility_height_preset' %}" data-preview-item="banner-bundle">
  <div class="banner-bundle__container">
    <div class="banner-bundle__wrapper">
      <header class="banner-bundle__img-container" style="background-image:url({{ bundle.image.large }});"></header>
      <article class="section__content section__body">
        <div class="section__content__wrapper">
          <span class="section__subheading"><i class="fa fa-clone"></i>{{ bundle.courses.size }} Course Bundle</span>
          <h1 class="section__heading">{{ bundle.name }}</h1>
          <section class="banner-bundle__description">{{ bundle.tagline }}</section>
          <section class="banner-bundle__button-group">
            <a href="{{ bundle.links.buy }}" class="button button-primary button-purchase">{{ bundle.buy_button_text }}</a>
          </section>
        </div>
        <footer class="banner-bundle__details">
          {% if bundle.courses.size != empty %}
            <span class="banner-bundle__course-count"><strong>{{ bundle.courses.size }}</strong> Courses</span>
          {% endif %}
          {% if bundle.lesson_count != blank %}
            <span class="banner-bundle__lesson-count"><strong>{{ bundle.lesson_count }}</strong> Lessons</span>
          {% endif %}
          {% if bundle.enrollment_count != blank %}
            <span class="banner-bundle__enrollment-count"><strong>{{ bundle.enrollment_count }}</strong> Students</span>
          {% endif %}
        </footer>
      </article>
    </div>
  </div>
</section>

{% schema %}
{
  "label":"Banner (Bundle) [smart]",
  "settings":[]
}
{% endschema %}
