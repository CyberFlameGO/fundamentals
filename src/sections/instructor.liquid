<section class="instructor section-height__medium" data-preview-item="instructor">
  <div class="instructor__container">
    {% include 'section_headings' %}
    <article class="section__content">
      {% if section.blocks != empty %}
        <ul class="instructor__list section__body">
          {% for block in section.blocks %}
          {% assign instructor = block.settings.instructor %}
            <li class="instructor__profile">
              <header>
                {% if instructor.avatar != blank %}
                  <img class="instructor__avatar" src="{{ instructor.avatar }}" alt="{{ instructor.full_name }}" title="{{ instructor.full_name }}"  />
                {% endif %}
                  <h4 class="instructor__name">
                    {{ instructor.full_name }}
                  </h4>
                {% if instructor.title != blank %}
                  <h4 class="instructor__title">
                    {{ instructor.title }}
                  </h4>
                {% endif %}
              </header>
              {% if instructor.bio != blank %}
                <section class="instructor__bio">
                  {{ instructor.bio }}
                </section>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </article>
  </div>
</section>

<script>
$(window).load(function() {
  var $instructorCarousel = $('.instructor__list').addClass('owl-carousel'),
      looped = ($('.instructor__list .instructor__list-item').length <= 1) ? false : true,
      instructorOwlOptions = {
        center: false,
        dots: true,
        loop: looped,
        margin: 0,
        nav: true,
        navText: ['<i class="fa fa-chevron-left"></i>','<i class="fa fa-chevron-right"></i>'],
        slideBy: 1,
        responsive: {
          0: {
            items: 1
          }
        }
      };
  $instructorCarousel.owlCarousel(instructorOwlOptions);
});
</script>

{% style %}

section.instructor {
  {% include 'section_style_heading_alignment' %}
  {% include 'section_style_heading_order' %}
  {% include 'section_style_heading_ornament' %}
}

{% endstyle %}

{% schema %}
{
  "label":"Instructor",
  "settings":[
    {
      "label":"Headings",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"About the instructor"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":""
        },
        {
          "type":"radio",
          "id":"heading_alignment",
          "label":"Alignment",
          "description":"",
          "default":"center",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        }
      ]
    }
  ],
  "blocks":{
    "label":"Add instructor",
    "limit":3,
    "types":[
      {
        "type":"instructor",
        "label":"Instructor",
        "settings":[
          {
            "type":"instructor_picker",
            "id":"instructor",
            "label":"Select course instructor"
          }
        ]
      }
    ],
    "defaults": []
  }
}
{% endschema %}
