<section class="bundle-includes" data-preview-item="bundle-includes">
  <article>
    {% assign bundle = page.bundle %}
    {% if bundle.courses.size > 0 %}
      {% assign initial_courses = 6 %}
    {% endif %}
    <ul>
      {% for course in bundle.courses limit: initial_courses %}
        <li>
          {% include 'product__card__course' with course %}
        </li>
      {% endfor %}
      {% for course in bundle.courses offset: initial_courses %}
        <li>
          {% include 'product__card__course' with course %}
        </li>
      {% endfor %}
    </ul>
    {% if bundle.courses.size > initial_courses %}
      <section id="see-more">
        <a href="#see-more">
          {{ 'liquid.views.bundle_landing_page.link_view_all' | translate }} {{ page.bundle_num_of_courses }} {{ 'liquid.views.bundle_landing_page.link_courses' | translate }}
        </a>
      </section>
    {% endif %}
  </article>
</section>

{% schema %}
{
  "label":"Bundle includes [smart section]",
  "description":"This smart section automatically includes all of the courses included in this bundle. <a href='/manage/courses/bundles/' target='_blank'>Edit Bundles Â»</a>",
  "settings":[
    {
      "label":"Headings",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"Bundle includes"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":"Here are all the courses that are included in your bundle."
        }
      ]
    },
    {
      "label":"Layout",
      "settings":[
        {
          "type":"checkbox",
          "id":"section_padding_top",
          "label":"Remove top section padding",
          "default":false
        },
        {
          "type":"checkbox",
          "id":"section_padding_bottom",
          "label":"Remove bottom section padding",
          "default":false
        },
        {
          "type":"radio",
          "id":"card_alignment",
          "label":"Card alignment",
          "description":"",
          "default":"center",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        },
        {
          "type":"radio",
          "id":"heading_alignment",
          "label":"Heading alignment",
          "description":"",
          "default":"center",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        }
      ]
    }
  ]
}
{% endschema %}
