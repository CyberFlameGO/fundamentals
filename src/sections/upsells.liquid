<section class="upsells" data-preview-item="upsells">
  {% if section.blocks != empty %}
    <ul>
      {% for block in section.blocks %}
        {% assign upsell = block.settings %}
        {% assign price = upsell.price %}
        <li>
          {% if upsell.icon != blank %}
            <i class="fa {{ upsell.icon }}" aria-hidden="true"></i>
          {% endif %}
          {% if price != blank %}
            <h3>
              {{ price.display_price }}
            </h3>
          {% endif %}
          <h3>
            <span>{{ price.display_price }}</span>
            {{ price.product.name }}
          </h3>
          {{ upsell.body }}
          {% if price != blank %}
            <a href="{{ price.links.add_to_cart }}">
              {% if upsell.button_text != empty %} {{ upsell.button_text }} {% else %} {{ price.buy_button_text }} {% endif %}
            </a>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  {% endif %}
</section>

{% schema %}
{
  "label": "Upsells",
  "settings": [
    {
      "label":"Headings",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"Upsells"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":""
        },
        {
          "type":"radio",
          "id":"heading_alignment",
          "label":"Alignment",
          "description":"",
          "default":"left",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        }
      ]
    },
    {
      "label":"Layout",
      "settings":[
        {
          "type":"checkbox",
          "id":"section_padding_top",
          "label":"Remove top section padding",
          "default":false
        },
        {
          "type":"checkbox",
          "id":"section_padding_bottom",
          "label":"Remove bottom section padding",
          "default":false
        }
      ]
    }
  ],
  "blocks":{
    "label":"Add upsell",
    "limit":12,
    "types":[
      {
        "type":"upsell",
        "label":"Upsell",
        "settings":[
          {
            "type":"icon",
            "id":"icon",
            "label":"",
            "description":"",
            "default":"fa-calendar-o"
          },
          {
            "type":"price_picker",
            "id":"price",
            "label":"Product",
            "description":""
          },
          {
            "type":"textarea",
            "id":"body",
            "label":"Description",
            "description":""
          },
          {
            "type":"text",
            "id":"button_text",
            "label":"Button text",
            "default":"Buy Now"
          },
          {
            "type":"radio",
            "id":"button_type",
            "label":"Button type",
            "description":"",
            "default":"primary",
            "options":[
              {
                "value":"primary",
                "label":"Primary"
              },
              {
                "value":"secondary",
                "label":"Secondary"
              }
            ]
          }
        ]
      }
    ],
    "defaults":[]
  }
}
{% endschema %}
