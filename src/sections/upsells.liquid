<section class="upsells
{% include 'section_utility_color_preset' %}
{% include 'section_utility_height_preset' %}" data-preview-item="upsells">
  <div class="upsells__container">
    <article class="section__content">
      {% include 'section_headings' %}
      {% if section.blocks != empty %}
        <ul class="upsells__list section__body">
          {% for block in section.blocks %}
            {% assign upsell = block.settings %}
            {% assign price = upsell.price %}
            <li class="upsells__list-item">
              {% if upsell.icon != blank %}
                <i class="fa {{ upsell.icon }}"></i>
              {% endif %}
              <div class="upsells__details">
                {% if price != blank %}
                  <h4 class="upsells__price">
                    {{ price.display_price }}
                  </h4>
                {% endif %}
                <section class="upsells__details__wrapper">
                  <h4 class="upsells__title"><span class="upsells__title__price">{{ price.display_price }}</span>{{ price.name }}</h4>
                  <div class="upsells__description">
                    {{ upsell.body }}
                  </div>
                </section>
              </div>
              {% if price != blank %}
                <span class="upsells__buy">
                  <a href="{{ price.links.add_to_cart }}" class="button">
                    {% if upsell.button_text != empty %} {{ upsell.button_text }} {% else %} {{ price.buy_button_text }} {% endif %}
                  </a>
                </span>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </article>
  </div>
</section>

{% style %}

section.upsells {
  {% include 'section_style_heading_alignment' %}
  {% include 'section_style_heading_order' %}
  {% include 'section_style_heading_ornament' %}
}

{% endstyle %}

{% schema %}
{
  "label": "Upsells",
  "settings": [
    {
      "label":"Headings",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"You may also be interested in..."
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":""
        },
        {
          "type":"radio",
          "id":"heading_alignment",
          "label":"Alignment",
          "description":"",
          "default":"left",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        },
        {
          "type":"radio",
          "id":"heading_order",
          "label":"Order",
          "default":"default",
          "options":[
            {
              "value":"default",
              "label":"Default"
            },
            {
              "value":"flipped",
              "label":"Flipped"
            }
          ]
        },
        {
          "type":"checkbox",
          "id":"show_heading_ornament",
          "label":"Show ornament",
          "default":false
        }
      ]
    },
    {
      "label":"Background",
      "settings":[
        {
          "type":"select",
          "id":"background_color_preset",
          "label":"Choose color set",
          "description":"Color sets can be configured in the Design area.",
          "default":"secondary",
          "options":[
            {
              "value":"primary",
              "label":"Primary"
            },
            {
              "value":"secondary",
              "label":"Secondary"
            },
            {
              "value":"tertiary",
              "label":"Tertiary"
            }
          ]
        }
      ]
    },
    {
      "label":"Section height",
      "settings":[
        {
          "type":"select",
          "id":"section_height_preset",
          "label":"Height preset",
          "description":"",
          "default":"medium",
          "options":[
            {
              "value":"small",
              "label":"Small"
            },
            {
              "value":"medium",
              "label":"Medium"
            },
            {
              "value":"large",
              "label":"Large"
            }
          ]
        }
      ]
    }
  ],
  "blocks":{
    "label":"Upsell",
    "limit":12,
    "types":[
      {
        "type":"upsell",
        "label":"Upsell",
        "settings":[
          {
            "type":"icon",
            "id":"icon",
            "label":"",
            "description":"",
            "default":"fa-calendar-o"
          },
          {
            "type": "text",
            "id": "button_text",
            "label": "Button text",
            "default": "Buy Now"
          },
          {
            "type":"price_picker",
            "id":"price",
            "label":"",
            "description":""
          },
          {
            "type":"textarea",
            "id":"body",
            "label":"Description",
            "description":""
          }
        ]
      }
    ],
    "defaults":[]
  }
}
{% endschema %}
