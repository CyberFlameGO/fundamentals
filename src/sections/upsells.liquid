<section class="upsells section-height__medium" data-preview-item="upsells">
  <div class="upsells__container">
    <article class="section__content">
      {% include 'section_headings' %}
      {% if section.blocks != empty %}
        <ul class="upsells__list section__body">
          {% for block in section.blocks %}
            {% assign upsell = block.settings %}
            {% assign price = upsell.price %}
            <li class="upsells__list-item">
              {% if upsell.icon != blank %}
                <i class="fa {{ upsell.icon }}"></i>
              {% endif %}
              <div class="upsells__details">
                {% if price != blank %}
                  <h4 class="upsells__price">
                    {{ price.display_price }}
                  </h4>
                {% endif %}
                <section class="upsells__details__wrapper">
                  <h4 class="upsells__title"><span class="upsells__title__price">{{ price.display_price }}</span>{{ price.name }}</h4>
                  <div class="upsells__description">
                    {{ upsell.body }}
                  </div>
                </section>
              </div>
              {% if price != blank %}
                <span class="upsells__buy">
                  <a href="{{ price.links.add_to_cart }}" class="button">
                    {% if upsell.button_text != empty %} {{ upsell.button_text }} {% else %} {{ price.buy_button_text }} {% endif %}
                  </a>
                </span>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </article>
  </div>
</section>

{% style %}

section.upsells {
  {% include 'section_style_heading_alignment' %}
  {% include 'section_style_heading_ornament' %}
}

{% endstyle %}

{% schema %}
{
  "label": "Upsells",
  "settings": [
    {
      "label":"Headings",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"Upsells"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":""
        },
        {
          "type":"radio",
          "id":"heading_alignment",
          "label":"Alignment",
          "description":"",
          "default":"left",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        },
        {
          "type":"radio",
          "id":"heading_order",
          "label":"Heading Order",
          "default":"normal",
          "options":[
            {
              "value":"normal",
              "label":"Normal"
            },
            {
              "value":"reverse",
              "label":"Reverse"
            }
          ]
        }
      ]
    }
  ],
  "blocks":{
    "label":"Add upsell",
    "limit":12,
    "types":[
      {
        "type":"upsell",
        "label":"Upsell",
        "settings":[
          {
            "type":"icon",
            "id":"icon",
            "label":"",
            "description":"",
            "default":"fa-calendar-o"
          },
          {
            "type":"text",
            "id":"button_text",
            "label":"Button text",
            "default":"Buy Now"
          },
          {
            "type":"price_picker",
            "id":"price",
            "label":"Product",
            "description":""
          },
          {
            "type":"textarea",
            "id":"body",
            "label":"Description",
            "description":""
          }
        ]
      }
    ],
    "defaults":[]
  }
}
{% endschema %}
