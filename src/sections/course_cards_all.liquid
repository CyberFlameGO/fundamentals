<section class="course-cards course-cards-all section-height__large" data-preview-item="course-cards-all">
  <div class="course-cards__container">
    {% include 'section_headings' %}
    <article class="section__content">
      <ul class="products__list">
        {% assign card_limit = section.settings.course_card_limit %}
        {% for product in page.products limit: card_limit %}
          <li class="products__list-item section__body">
            {% if product.is_course %}
              {% assign course = product.course %}
              {% include 'course_card' with course %}
            {% else %}
              {% assign bundle = product.bundle %}
              {% include 'bundle_card' with bundle %}
            {% endif %}
          </li>
        {% endfor %}
      </ul>
      {% if section.settings.show_button %}
        <section class="section__button-group">
          <a class="button button-primary" href="{{ site.collections_url }}">{{ section.settings.button_text }}</a>
        </section>
      {% endif %}
    </article>
  </div>
</section>

{% style %}

section.course-cards-all {
  {% include 'section_style_heading_alignment' %}
  {% include 'section_style_heading_ornament' %}
}

{% endstyle %}

{% schema %}
{
  "label":"All products [smart section]",
  "settings":[
    {
      "type":"checkbox",
      "id":"course_cards_all_description",
      "label":"",
      "description":"<small>This smart section includes all of your published products that you haven’t set as hidden. <a href='/manage/courses/list/' target='_blank'>Re-order products »</a></small>"
    },
    {
      "type":"select",
      "id":"course_card_limit",
      "label":"Max number of cards",
      "description":"",
      "default":3,
      "options":[
        {
          "value":3,
          "label":"3"
        },
        {
          "value":6,
          "label":"6"
        },
        {
          "value":9,
          "label":"9"
        },
        {
          "value":12,
          "label":"12"
        },
        {
          "value":15,
          "label":"15"
        }
      ]
    },
    {
      "label":"Headings",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"Additional products"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":""
        },
        {
          "type":"radio",
          "id":"heading_alignment",
          "label":"Alignment",
          "description":"",
          "default":"center",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        },
        {
          "type":"radio",
          "id":"heading_order",
          "label":"Heading Order",
          "default":"normal",
          "options":[
            {
              "value":"normal",
              "label":"Normal"
            },
            {
              "value":"reverse",
              "label":"Reverse"
            }
          ]
        }
      ]
    },
    {
      "label":"Button",
      "settings":[
        {
          "type":"checkbox",
          "id":"show_button",
          "label":"Show link to All Courses page",
          "default":true
        },
        {
          "type":"text",
          "id":"button_text",
          "label":"Text",
          "default":"View more courses"
        }
      ]
    }
  ]
}
{% endschema %}
