<section class="course-cards course-cards-all section-height__large" data-preview-item="course-cards-all">
  <div class="course-cards__container">
    {% include 'section_headings' %}
    <article class="section__content">
      <ul class="products__list">
        {% assign card_limit = section.settings.course_card_limit %}
        {% for product in page.products limit: card_limit %}
          <li class="products__list-item section__body">
            {% if product.is_course %}
              {% assign course = product.course %}
              {% include 'course_card' with course %}
            {% else %}
              {% assign bundle = product.bundle %}
              {% include 'bundle_card' with bundle %}
            {% endif %}
          </li>
        {% endfor %}
      </ul>
      <section class="section__button-group">
        <a class="button button-primary" href="{{ site.collections_url }}">{{ 'liquid.views.student_dashboard.link_view_more_courses' | translate }}</a>
      </section>
    </article>
  </div>
</section>

{% style %}

section.course-cards-all {
  {% include 'section_style_heading_alignment' %}
  {% include 'section_style_heading_order' %}
  {% include 'section_style_heading_ornament' %}
}

{% endstyle %}

{% schema %}
{
  "label":"Course cards (All)",
  "settings":[
    {
      "label":"Headings",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"All courses"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":""
        },
        {
          "type":"radio",
          "id":"heading_alignment",
          "label":"Alignment",
          "description":"",
          "default":"center",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        }
      ]
    },
    {
      "label":"Course cards",
      "settings":[
        {
          "type":"select",
          "id":"course_card_limit",
          "label":"Card limit",
          "description":"Maximum number of courses to show",
          "default":3,
          "options":[
            {
              "value":3,
              "label":"3"
            },
            {
              "value":6,
              "label":"6"
            },
            {
              "value":9,
              "label":"9"
            },
            {
              "value":12,
              "label":"12"
            },
            {
              "value":15,
              "label":"15"
            }
          ]
        }
      ]
    }
  ]
}
{% endschema %}
