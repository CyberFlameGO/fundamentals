<section class="rich-text section-height__medium" data-preview-item="rich_text">
  <div class="rich-text__container">
    <div class="rich-text__wrapper">
      {% include 'section_headings' %}
      <article class="section__content">
        <section class="section__body">
          {{ section.settings.body }}
        </section>
      </article>
    </div>
  </div>
</section>

{% style %}

section.rich-text {
  {% include 'section_style_heading_alignment' %}
  {% include 'section_style_heading_ornament' %}
}

{% endstyle %}

{% schema %}
{
  "label":"Text & media",
  "settings":[
    {
      "label":"Headings",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"Text (and so much more)"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":""
        },
        {
          "type":"radio",
          "id":"heading_alignment",
          "label":"Alignment",
          "description":"",
          "default":"left",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        },
        {
          "type":"radio",
          "id":"heading_order",
          "label":"Heading Order",
          "default":"normal",
          "options":[
            {
              "value":"normal",
              "label":"Normal"
            },
            {
              "value":"reverse",
              "label":"Reverse"
            }
          ]
        }
      ]
    },
    {
      "type":"richtext",
      "id":"body",
      "label":"Content",
      "default":"The other sections are styled to help you create beautiful, high-converting pages. If you already know exactly what you want, use this section to add text, images, video, audio, etc. and build something completely custom. This is your sandbox â€” create what you want!"
    }
  ]
}
{% endschema %}
