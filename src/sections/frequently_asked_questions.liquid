<section class="faq" data-preview-item="faq">
  <div class="faq__container">
    {% include 'section_headings' %}
    <article class="section__content">
      {% if section.blocks != empty %}
      <ul class="faq__list section__body">
        {% for block in section.blocks %}
          <li class="faq__list-item">
            <input type="checkbox" {% if !section.settings.show_collapsed %} checked="checked" {% endif %}/>
            <strong>{{ block.settings.faq_question }}<i></i></strong>
            <p>{{ block.settings.faq_answer }}</p>
          </li>
        {% endfor %}
      </ul>
      {% endif %}
    </article>
  </div>
</section>

<script>
$(window).load(function() {
  {% if section.settings.show_collapsed %}
    var $faq = $('.faq__list-item input');
    $faq.first().attr("checked", false);
  {% endif %}
});
</script>

{% style %}

section.faq {
  {% include 'section_style_heading_alignment' %}
  {% include 'section_style_heading_order' %}
  {% include 'section_style_heading_ornament' %}
}

{% endstyle %}

{% schema %}
{
  "label":"Frequently asked questions",
  "settings":[
    {
      "label":"Headings",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"Frequently asked questions"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":""
        },
        {
          "type":"radio",
          "id":"heading_alignment",
          "label":"Alignment",
          "description":"",
          "default":"center",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        }
      ]
    },
    {
      "label":"Accordion",
      "settings":[
        {
          "type":"checkbox",
          "id":"show_collapsed",
          "label":"Collapsed by default",
          "default":true
        }
      ]
    }
  ],
  "blocks":{
    "label":"Add FAQ item",
    "limit":9,
    "types":[
      {
        "type":"faq",
        "label":"Frequently asked question",
        "settings":[
          {
            "type":"text",
            "id":"faq_question",
            "label":"Question"
          },
          {
            "type":"textarea",
            "id":"faq_answer",
            "label":"Answer"
          }
        ]
      }
    ],
    "defaults":[]
  }
}
{% endschema %}
