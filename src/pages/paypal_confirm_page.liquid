<main class="checkout checkout__paypal-express" id="{{ theme.settings.main_content_id }}">
  <ul>
    <li class="active">{{ 'liquid.views.paypal_confirm_page.list_account_setup' | translate }}</li>
    <li class="active">{{ 'liquid.views.paypal_confirm_page.list_paypal_confirmation' | translate }}</li>
  </ul>
  <section>
    {% if page.product.image.small != blank %}
      {% assign product_image = page.product.image.small %}
    {% else %}
      {% assign product_image = page.product.image.original %}
    {% endif %}
    <img src="{{ product_image }}" alt="{{ page.product.name }}" title="{{ page.product.name }}" />
    <h3>{{ page.product.name }}</span>
    <h4>{{ page.product_display_price }}</span>
    {{ page.paypal_confirmation_form }}
  </section>
  <img src="{{ page.secure_payment_badge_url }}" alt="Paypal secure badge" title="Paypal secure badge" />
</main>
