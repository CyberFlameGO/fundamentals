{% comment %}
  This is the Affiliate Settings page.
  This is where affiliate users can edit their affiliate settings.
{% endcomment %}

<div class="affiliate">
  <div class="container">
    <div class="row">
      <aside class="page__menu hidden-print">
        {% include 'affiliate_dashboard_menu' %}
      </aside>
      <main class="page__content" id="main-content" role="main">
        <h1>{{ 'liquid.views.affiliate_settings_page.header_affiliate_information' | translate }}</h1>
        {% form 'affiliate_settings' %}
        {% if errors.size > 0 %}
          {% include 'form_errors' %}
        {% endif %}
        <div class="form__group">
          {% assign field = fields.affiliate_code %}
          <label for="{{ field.name }}" class="form__label">{{ field.label }}
            <input type="text" name="{{ field.name }}" value="{{ field.value }}" readonly class="form__control" />
          </label>
          {% assign field = fields.affiliate_commission %}
          <label for="{{ field.name }}" class="form__label">{{ field.label }}
            <input type="text" value="{{ field.value }}" readonly class="form__control" />
          </label>
        </div>
        <div class="form__group">
          {% assign field = fields.affiliate_payout_email %}
          <label for="{{ field.name }}" class="form__label">{{ field.label }}
            <input type="email" name="{{ field.name }}" value="{{ field.value }}" class="form__control" />
          </label>
        </div>
        <div class="form__button-group">
          <input type="submit" value="{{ fields.submit.label }}" class="button button-primary" />
        </div>
        {% endform %}
      </main>
    </div>
  </div>
</div>
