{% comment %}
  This is the page where the user can request a new password
{% endcomment %}

<main class="password-reset" id="main-content" role="main">
  <div class="container">
    <div class="row">
      <article class="password-reset__form">
        <h1 class="page__heading">{{ 'liquid.views.password_reset_request_page.text_forgot_password' | translate }}</h1>
        {% form 'password_reset_request' %}
        {% if errors.size > 0 %}
          {% include 'form_errors' %}
        {% endif %}
        <p>{{ 'liquid.views.password_reset_request_page.text_explanation' | translate }}</p>
        {% assign field = fields.email %}
        <div class="form__group">
          <label for="{{ field.name }}" class="form__label">{{ field.label }}
            <input type="email" id="{{ field.name }}" value="{{ field.value }}" name="{{ field.name }}" placeholder="{{ field.placeholder }}" class="form__control" {% if field.required %}required{% endif %} autocapitalize="off" autocomplete="off" autocorrect="off" spellcheck="false" />
          </label>
        </div>
        <div class="form__group">
          <input type="submit" name="commit" value="{{ fields.submit.label }}" class="button button-primary" />
        </div>
        {% endform %}
      </article>
    </div>
  </div>
</main>
